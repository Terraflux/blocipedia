<div class="header">
	<h1>
		<%= render @wiki %>
	</h1>
</div>
<div class="row">
	<div class="col-md-8">
		<div class="header">
			<%= link_to "Edit", edit_wiki_path, class: 'btn btn-success' %>
			<% if current_user.admin? %>
				<%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure?"} %>
			<% end %>
			<%= link_to "Collaborators", new_wiki_collaborator_path(@wiki), class: 'btn btn-success' %>
		</div>
	</div>
</div>